<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <springProperty name="eip.base.dir" source="eip.home" defaultValue="${user.home}${file.separator}.openmrs-eip" />

    <property name="LOGS_PATTERN" value="%-5level %date [%thread] %logger{8}:%line %msg%n" />
    <property name="LOGS_DIR" value="${eip.base.dir}${file.separator}logs" />
    <property name="LOGS_FILE_NAME" value="openmrs-eip" />
    <property name="LOGS_FILE_NAME_EXT" value="log" />
    <property name="LOGS_FILE" value="${LOGS_DIR}${file.separator}${LOGS_FILE_NAME}.${LOGS_FILE_NAME_EXT}" />
    <property name="LOGS_MAX_FILE_SIZE" value="10MB" />

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_FILE}</file>
        <encoder>
            <pattern>${LOGS_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Rollover daily and when the file reaches configured max size, default is 10MB -->
            <fileNamePattern>${LOGS_DIR}${file.separator}%d{yyyy-MM}${file.separator}%d{dd}${file.separator}${LOGS_FILE_NAME}_%i.${LOGS_FILE_NAME_EXT}.gz</fileNamePattern>
            <maxFileSize>${LOGS_MAX_FILE_SIZE}</maxFileSize>
        </rollingPolicy>
    </appender>
    
    <appender name="binlog-offset-errors" class="org.openmrs.eip.app.log.BinlogReaderOffsetErrorsAppender">
        <filter class="org.openmrs.eip.app.log.BinlogReaderOffsetErrorsAppenderFilter" />
    </appender>

    <appender name="async-errors" class="ch.qos.logback.classic.AsyncAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        
        <appender-ref ref="binlog-offset-errors" />
    </appender>
    
    <root level="info">
        <appender-ref ref="file" />
        <appender-ref ref="async-errors" />
    </root>
</configuration>