<routes xmlns="http://camel.apache.org/schema/spring">
    <route id="inbound-db-sync" errorHandlerRef="inBoundErrorHandler">
        <from uri="direct:inbound-db-sync" />

        <log loggingLevel="DEBUG" message="Start: ${routeId}" />

        <setProperty name="original-msg-body">
            <simple>${body}</simple>
        </setProperty>
        <setProperty name="model-classes">
            <method beanType="org.openmrs.eip.component.utils.Utils" method="getModelClassesInHierarchy(${exchangeProperty.model-class})" />
        </setProperty>

        <toD uri="jpa:ConflictQueueItem?query=SELECT c from ConflictQueueItem c WHERE c.modelClassName IN (${exchangeProperty.model-classes}) AND c.identifier='${exchangeProperty.entity-id}' AND c.resolved = false" />

        <choice>
            <when>
                <simple>${body.size()} > 0</simple>
                <log message="Moving the message to the failure queue because the entity has ${body.size()} message(s) in the DB sync conflict queue" />
                <setProperty name="err-message">
                    <simple>Cannot process the message because the entity has ${body.size()} message(s) in the DB sync conflict queue</simple>
                </setProperty>
                <throwException exceptionType="org.openmrs.eip.component.exception.EIPException" message="${exchangeProperty.err-message}" />
            </when>
            <otherwise>
                <setBody>
                    <simple>${exchangeProperty.original-msg-body}</simple>
                </setBody>

                <doTry>
                    <to uri="openmrs:load" />

                    <setProperty name="org.openmrs.eip.app.receiver.sync-msgProcessed">
                        <simple>true</simple>
                    </setProperty>

                    <doCatch>
                        <exception>org.openmrs.eip.component.exception.ConflictsFoundException</exception>
                        <setBody>
                            <spel>
                                #{new org.openmrs.eip.app.management.entity.ConflictQueueItem()}
                            </spel>
                        </setBody>

                        <log message="Adding message to conflict queue" />

                        <choice>
                            <when>
                                <!-- This is a new message with a conflict -->
                                <simple>${exchangeProperty.retry-item} == null</simple>
                                <script>
                                    <spel>
                                        #{body.setIdentifier(getProperty('entity-id'))}
                                        #{body.setModelClassName(getProperty('model-class'))}
                                        #{body.setEntityPayload(getProperty('entity-payload', T(java.lang.String)))}
                                        #{body.setDateCreated(new java.util.Date())}
                                        #{body.setOperation(getProperty('sync-message').getOperation())}
                                        #{body.setSite(getProperty('sync-message').getSite())}
                                        #{body.setDateSentBySender(getProperty('sync-message').getDateSentBySender())}
                                        #{body.setSnapshot(getProperty('sync-message').getSnapshot())}
                                        #{body.setMessageUuid(getProperty('sync-message').getMessageUuid())}
                                        #{body.setDateReceived(getProperty('sync-message').getDateCreated())}
                                    </spel>
                                </script>
                            </when>
                            <otherwise>
                                <!-- This is a retry attempt with a conflict -->
                                <script>
                                    <spel>
                                        #{body.setIdentifier(getProperty('retry-item').getIdentifier())}
                                        #{body.setModelClassName(getProperty('retry-item').getModelClassName())}
                                        #{body.setOperation(getProperty('retry-item').getOperation())}
                                        #{body.setEntityPayload(getProperty('retry-item').getEntityPayload())}
                                        #{body.setDateCreated(new java.util.Date())}
                                        #{body.setSite(getProperty('retry-item').getSite())}
                                        #{body.setDateSentBySender(getProperty('retry-item').getDateSentBySender())}
                                        #{body.setSnapshot(getProperty('retry-item').getSnapshot())}
                                        #{body.setMessageUuid(getProperty('retry-item').getMessageUuid())}
                                        #{body.setDateReceived(getProperty('retry-item').getDateReceived())}
                                    </spel>
                                </script>
                            </otherwise>
                        </choice>

                        <log message="Saving conflict item" loggingLevel="DEBUG" />

                        <to uri="jpa:ConflictQueueItem" />

                        <log message="Successfully saved conflict item" loggingLevel="DEBUG" />

                        <setProperty name="org.openmrs.eip.app.receiver.sync-movedToConflictQueue">
                            <simple>true</simple>
                        </setProperty>
                    </doCatch>
                </doTry>
            </otherwise>
        </choice>

        <log loggingLevel="DEBUG" message="End: ${routeId}" />
    </route>
</routes>
