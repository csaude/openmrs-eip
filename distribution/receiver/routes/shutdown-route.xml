<routes xmlns="http://camel.apache.org/schema/spring">
    <route id="shutdown-route">
        <from uri="direct:shutdown-route" />

        <choice>
            <when>
                <method beanType="org.openmrs.eip.app.ReceiverContext" method="isStopSignalReceived()" />
                <log loggingLevel="DEBUG" message="The application is already shutting down" />
            </when>
            <when>
                <method beanType="org.openmrs.eip.app.SyncApplication" method="isShuttingDown()" />
                <log loggingLevel="DEBUG" message="The application is already shutting down" />
            </when>
            <otherwise>
                <!-- TODO Send a notification to the configured emails -->

                <log loggingLevel="ERROR" message="An error occurred, ${exception.printStackTrace()}" />

                <script>
                    <method beanType="org.openmrs.eip.app.SyncApplication" method="shutdown()" />
                </script>
            </otherwise>
        </choice>

    </route>
</routes>
