<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>build-owa</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <includes>
                <include>img/**</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <filtered>true</filtered>
            <source>index.html</source>
            <destName>index.${projectBuildNumber}.html</destName>
        </file>
        <file>
            <filtered>true</filtered>
            <source>manifest.webapp</source>
        </file>
        <file>
            <filtered>true</filtered>
            <source>js/config.js</source>
            <destName>js/config.${projectBuildNumber}.js</destName>
        </file>
    </files>
</assembly>
